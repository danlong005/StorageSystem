<br />

<script>
        function searchBins() {
                const userId = `<%= authentication.id%>`;
                const searchElement = document.getElementById("search").value;

                fetch(`http://localhost:3000/users/${userId}/bins/search?search=${searchElement}`)
                        .then((response) => console.log(response));
        }
</script>

<div>
        <form class="d-flex">
                <a href="/users/<%= authentication.id %>/bins/new" class="btn btn-outline-success">+</a>
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" id="search" name="search">
                <button class="btn btn-outline-success" type="button" onclick="searchBins()">Search</button>
        </form>
</div>

<br />
<br />
<h1>Existing Bins</h1>
<ul>
    <% bins.forEach((bin) => { %>
        <li><a href="bins/<%= bin.id %>"><%= bin.name %></a></li>
    <% }); %>
</ul>
